extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="username", placeholder="username",type="text", required=true)
        input(name="password", placeholder="password",type="password", required=true)
        input(type="submit", value="login")
        include partials/social-login.pug
    div.auth-switch
        span Don't have an account? Create Now!  
        a(href="/join") join in now &rarr;