extends base.pug


block content 
    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls.videoControls
            div.timelineContainer
                input(type="range",step="1", value=0 min="0")#timeline
            div.videoControlContainer
                div.videoControls__play
                    span#play.playBtn
                        i.fas.fa-play
                div.videoControls__volume
                    span#mute
                        i.fas.fa-volume-up 
                    input(type="range",step="0.05", value=0.5 min="0", max="1")#volume
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00: 00
                div 
                    span#fullscreen
                        i.fas.fa-expand
    
    div
        p=video.description
        small=video.createdAt
    div 
        small Uploaded by 
            a(href=`/users/${video.owner._id}`) #{video.owner.name}
    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br 
        a(href=`${video.id}/delete`) Delete Video &rarr; 
    if loggedIn
        div.video__add-comments
            form.video__comments-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a comment")#textarea
                button Add comment
    div#commentsBox.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment
                    i.fas.fa-comment
                    span #{comment.text}.
                    if String(comment.owner._id) === String(loggedInUser._id)
                        span.deleteBtn(style = "cursor:pointer", data-id=comment._id) ‚ùå
block scripts 
    script(src="/static/js/videoPlayer.js")
    script(src="/static/js/commentSection.js")